kind: RoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
 name: "{{ k8s_group }}-{{ k8s_role }}"
 namespace: "{{ k8s_ns }}"
subjects:
- kind: Group
  name: "{{ k8s_group }}"
  apiGroup: rbac.authorization.k8s.io
roleRef:
 kind: Role
 name: "{{ k8s_role }}"
 apiGroup: rbac.authorization.k8s.io
